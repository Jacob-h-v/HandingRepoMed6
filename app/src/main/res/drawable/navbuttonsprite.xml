<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state (not pressed) -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White color for default state -->
            <corners android:radius="35dp"/> <!-- Rounded corners with a radius of 10dp -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#807E7B"/> <!-- Orange color for pressed state -->
            <corners android:radius="10dp"/> <!-- Rounded corners with a radius of 10dp -->
        </shape>
    </item>
</selector>
